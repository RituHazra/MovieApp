@model FirstMVCWebApplication.ViewModels.RandomMovieViewModel
<!--model FirstMVCWebApplication.Models.Movie-->
<!--using FirstMVCWebApplication.Models-->
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customers.Count > 1 ? "Popular" : null;
}

@* For comments multiline *@

<h2>Random page</h2>
<h2 class="@className">@Model.Movie.Name</h2>
@if (Model.Customers.Count == 0)
{
    <text>Nobody rented this movie</text>
}
else
{
<ul>

    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>
}

